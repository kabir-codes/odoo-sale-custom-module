<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>

        <field name="arch" type="xml">
            <xpath expr="//form/header/t/button[@name='action_lock']" position="after">
                <button name="action_form_sale_order" string="Form" type="object" class="btn-secondary"/>
                <button name="action_saved_form_order" string="Saved Drafts" type="object" class="btn-secondary"/>
            </xpath>
            
        </field>
    </record>
</odoo>
